<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <TextView
            android:id="@+id/media_title"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_marginStart="32dp"
            android:paddingBottom="8dp"
            android:text="Media"
            android:textColor="@color/primaryColor"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/media_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/media_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/house_media_rv_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/media_rv_item" />

                </LinearLayout>

                <Button
                    android:id="@+id/edit_media_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:visibility="gone"
                    android:text="Add new photo"
                    android:textColor="@color/secondaryDarkColor"
                    android:textSize="16sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/description_title"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_marginStart="32dp"
            android:paddingBottom="8dp"
            android:text="Description"
            android:textColor="@color/primaryColor"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/media_cardview" />

        <androidx.cardview.widget.CardView
            android:id="@+id/description_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="164dp">

                    <TextView
                        android:id="@+id/house_description_detail"
                        style="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:hint="Tu comprends, je suis mon meilleur modèle car entre penser et dire,
il y a un monde de différence et c'est très, très beau d'avoir son propre moi-même !
C'est cette année que j'ai eu la révélation !\n
You see, premièrement, on vit dans une réalité qu'on a créée et que j'appelle illusion et finalement
tout refaire depuis le début. Et j'ai toujours grandi parmi les chiens.\n
Oui alors écoute moi, tu vois au passage qu'il n'y a rien de concret car le cycle du cosmos dans la vie...
c'est une grande roue et cette officialité peut vraiment retarder ce qui devrait devenir...
C'est cette année que j'ai eu la révélation !"
                        android:paddingTop="2dp"
                        android:paddingBottom="26dp"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />

                </ScrollView>

                <Button
                    android:id="@+id/edit_description_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Edit description"
                    android:visibility="gone"
                    android:textColor="@color/secondaryDarkColor"
                    android:textSize="16sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/surface"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="4dp"
            android:drawablePadding="16dp"
            android:drawableTint="@color/secondaryDarkColor"
            android:text="Surface"
            android:textColor="@color/primaryDarkColor"
            android:textSize="24sp"
            app:drawableStartCompat="@drawable/ic_surface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description_cardview" />

        <TextView
            android:id="@+id/house_surface_detail"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:hint="750 sq m"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/surface" />

        <TextView
            android:id="@+id/rooms"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="4dp"
            android:drawablePadding="16dp"
            android:drawableTint="@color/secondaryDarkColor"
            android:text="Rooms"
            android:textColor="@color/primaryDarkColor"
            android:textSize="24sp"
            app:drawableStartCompat="@drawable/ic_room"
            app:layout_constraintStart_toStartOf="@id/bedrooms"
            app:layout_constraintTop_toBottomOf="@id/description_cardview" />

        <TextView
            android:id="@+id/house_rooms_detail"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:hint="8"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/rooms"
            app:layout_constraintTop_toBottomOf="@id/rooms" />

        <TextView
            android:id="@+id/bathrooms"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:drawablePadding="16dp"
            android:drawableTint="@color/secondaryDarkColor"
            android:text="Bathrooms"
            android:textColor="@color/primaryDarkColor"
            android:textSize="24sp"
            app:drawableStartCompat="@drawable/ic_bathroom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/house_surface_detail" />

        <TextView
            android:id="@+id/house_bathrooms_detail"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:hint="2"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/bathrooms"
            app:layout_constraintTop_toBottomOf="@id/bathrooms" />

        <TextView
            android:id="@+id/bedrooms"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:drawablePadding="16dp"
            android:drawableTint="@color/secondaryDarkColor"
            android:text="Bedrooms"
            android:textColor="@color/primaryDarkColor"
            android:textSize="24sp"
            app:drawableStartCompat="@drawable/ic_bedroom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/house_rooms_detail" />

        <TextView
            android:id="@+id/house_bedrooms_detail"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:hint="4"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/bedrooms"
            app:layout_constraintTop_toBottomOf="@id/bedrooms" />

        <TextView
            android:id="@+id/location"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:drawablePadding="16dp"
            android:drawableTint="@color/secondaryDarkColor"
            android:text="Location"
            android:textColor="@color/primaryDarkColor"
            android:textSize="24sp"
            app:drawableStartCompat="@drawable/ic_location"
            app:layout_constraintEnd_toEndOf="@id/rooms"
            app:layout_constraintStart_toStartOf="@id/surface"
            app:layout_constraintTop_toBottomOf="@id/house_bedrooms_detail" />

        <TextView
            android:id="@+id/house_location_detail"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:hint="740 park Avenue\nApt6/7A\nNewYork\nNY10021\nUnited States"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/location"
            app:layout_constraintTop_toBottomOf="@id/location" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/house_location_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/edit_details_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:text="Edit home details"
                android:textColor="@color/secondaryDarkColor"
                android:textSize="16sp"/>

            <View
                android:id="@+id/divider"
                android:layout_width="275dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@color/secondaryDarkColor"/>

            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/static_map_pic"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>