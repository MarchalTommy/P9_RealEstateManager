<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>

        <item name="floatingActionButtonStyle">@color/secondaryLightColor</item>

    </style>

    <style name="ThemeDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog.Centered">
        <item name="titleTextStyle">@android:color/white</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="colorOnBackground">@android:color/white</item>
        <item name="backgroundColor">@android:color/transparent</item>
    </style>

</resources>
